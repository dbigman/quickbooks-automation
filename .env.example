# QuickBooks Auto Reporter - Environment Configuration
# Copy this file to .env and configure with your settings

# QuickBooks Company File Path (optional)
# If not specified, the application will attempt to connect to the currently open company file
# Example: QB_COMPANY_FILE=C:\Users\Public\Documents\Intuit\QuickBooks\Company Files\MyCompany.QBW
QB_COMPANY_FILE=

# Output Directory for Reports (optional)
# Default: C:\Reports
# Example: OUTPUT_DIR=C:\QuickBooks\Reports
OUTPUT_DIR=

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (optional)
# If not specified, logs will be written to the output directory
# Example: LOG_FILE=C:\Logs\quickbooks_autoreport.log
LOG_FILE=

# Application Settings
# Application name shown in QuickBooks connection dialog
APP_NAME=Gasco Auto Reporter

# QuickBooks SDK Configuration
# Primary qbXML version to use
QBXML_VERSION_PRIMARY=16.0

# Fallback qbXML version if primary fails
QBXML_VERSION_FALLBACK=13.0

# Report Configuration
# Default report date range (YYYY-MM-DD format)
# If not specified, defaults to current month
# REPORT_DATE_FROM=2024-01-01
# REPORT_DATE_TO=2024-01-31

# Scheduled Execution
# Default check interval in minutes: 5, 15, 30, or 60
DEFAULT_INTERVAL=15

# Feature Flags
# Enable/disable optional features
ENABLE_CONTEXT7_ANALYTICS=true
ENABLE_EXCEL_MCP=true

# Development Settings (for testing only)
# Enable test mode to skip actual QuickBooks connection
TEST_MODE=false

# Enable verbose logging for debugging
DEBUG_MODE=false

# Dashboard Configuration
# Directory where dashboard reads Excel files from
DASHBOARD_OUTPUT_DIR=output

# Polling interval for automatic file refresh (in seconds)
# Default: 3600 (1 hour)
DASHBOARD_POLL_INTERVAL=3600

# Maximum file size for dashboard processing (in MB)
DASHBOARD_MAX_FILE_SIZE_MB=10

# Number of top products to display in charts
DASHBOARD_TOP_N_PRODUCTS=5
